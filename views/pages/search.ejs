<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Web Design | Search</title>
        <script src="../../public/js/search.js" defer></script>
        <%- include('../partials/head.ejs') %>
    </head>
    <body id="search-page">
        <!-- HEADER start -->
        <%- include('../partials/header.ejs') %>
        <!-- HEADER end-->
        <main>
            <!-- SEARCH SECTION start -->
            <section class="search section" id="search">
                <!-- SEARCH BAR start -->
                <div class="search-bg">
                    <!--<div><p class="search__desription">Display links <span class="show-all">all</span></p></div>-->

                    <div class="search__terms">
                        <p class="search__terms-text">
                            Try to search by terms like <b class="search__terms-text--red">colors</b>,
                            <b class="search__terms-text--green">software</b>,
                            <b class="search__terms-text--blue">css</b> or
                            <b class="search__terms-text--purple">fonts</b>. Search filters are coming soon.
                        </p>
                    </div>
                    <div class="search__bar">
                        <div class="search__bar-element">
                            <input
                                autofocus
                                type="text"
                                class="search__bar-term"
                                id="search_bar"
                                onkeyup="searchLinks()"
                                placeholder="Search the entire collection here."
                            />
                            <img src="../public/img/search.svg" alt="search icon" class="search__bar-element--icon" />
                        </div>
                    </div>
                </div>
                <!-- SEARCH BAR end -->

                <!-- SEARCH RESULTS start -->
                <div id="search__results" class="search__results">
                    <%- include('../partials/searchLinks.ejs') %>
                    <div class="toTop">
                        <a href="#" class="toTop--link"
                            ><img class="toTop--link-icon" src="../../public/img/arrow.svg" alt="" />
                        </a>
                    </div>
                </div>

                <!-- SEARCH RESULTS end -->
            </section>
            <!-- SEARCH SECTION end-->
            <!-- FOOTER start-->
            <div id="footer"><%- include('../partials/footer.ejs') %></div>
            <!-- FOOTER end-->
        </main>
    </body>
</html>
